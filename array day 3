//1.Take an array of numbers from user and print them on the screen


import java.util.Scanner;

public class arra2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter size of array");
        int size= sc.nextInt();
        int []arr=new int[size];
        System.out.print("Enter values : " );
        for (int i=0;i< arr.length;i++){
            arr[i]= sc.nextInt();
        }
        System.out.print("Printed array is");
        for (int i=0;i< arr.length;i++){
         System.out.print( +arr[i]);
        }
    }
}




//2.Find the maximum &minimum number in an array of integer


import java.util.Scanner;

public class arra2 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter size of array");
        int size= sc.nextInt();
        int []arr=new int[size];

        System.out.print("Enter values : " );
        for (int i=0;i< arr.length;i++){
            arr[i]= sc.nextInt();
        }
        int min= arr[0];
        for (int i=1;i<arr.length;i++){
            if (arr[i]<min) {
                min = arr[i];
            }
        }
        System.out.println("minimum value in the Array is " +min);
        int max=arr[0];
        for (int i=1;i<arr.length;i++){
            if (arr[i]>max){
                max=arr[i];
            }
        }
        System.out.println("maximum value is " +max);
    }
}




//3.Take an array of numbers as input & check if it is an array sorted in ascending order


import java.util.Scanner;
public class arra2 {
    static boolean isSorted(int arr[]) {
        for (int i = 1; i < arr.length; i++) {
            if (arr[i] < arr[i - 1]) {
                return false;
           }
        }
                return true;
                }
public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        System.out.println("Enter size of array");
        int size= sc.nextInt();
        int []arr=new int[size];

        System.out.print("Enter values : " );
        for (int i=0;i< arr.length;i++){
        arr[i]= sc.nextInt();
        }
        System.out.print(isSorted(arr));
        }
    }




